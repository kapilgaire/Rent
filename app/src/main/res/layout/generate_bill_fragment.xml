<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/month_spinner_content_generate_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/prev_reading_et_content_generate_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prev reading" />

        <EditText
            android:id="@+id/current_reading_et_content_generate_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="current Reading" />


        <TextView
            android:id="@+id/total_unit_txv_content_generate_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="total unit " />

        <TextView
            android:id="@+id/rate_per_unit_txv_content_generate_bill"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rate per Unit" />

        <TextView
            android:id="@+id/electricity_amt_txv_content_generate_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Electricity Amount " />

        <TextView
            android:id="@+id/room_rent_txv_content_generate_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room Rent" />

        <TextView
            android:id="@+id/balance_txv_content_generate_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Balance Amount" />

        <TextView
            android:id="@+id/total_payable_txv_content_generate_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Payable amount" />

        <EditText
            android:id="@+id/amount_received_content_generate_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount Received" />

        <Button android:id="@+id/generate_bill_btn_content_generate_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Bill"/>
    </LinearLayout>


</ScrollView>